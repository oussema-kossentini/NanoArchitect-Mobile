<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpinnerDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#3F51B5</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:calendarTextColor">#000000</item>
        <item name="android:yearListSelectorColor">#000000</item>
    </style>
    <!-- product -->
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>
    <style name="Circular">
        <item name="color">@color/white</item>
        <item name="cornerSize">50%</item>
    </style>

    //product style
    <style name="SearchViewStyle">
        <item name="android:background">@drawable/search_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="HeadLineTextViewCustomStyle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewCustomStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewRegular" parent="TextViewCustomStyle">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="GreenButtonCustomStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/green</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:paddingStart">@dimen/dp_25</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingEnd">@dimen/dp_25</item>
    </style>




</resources>