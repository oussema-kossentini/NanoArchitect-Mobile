<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Title Header -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter un nouvelle contrat"
        android:textSize="24sp"
        android:gravity="center"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- CIN -->
    <EditText
        android:id="@+id/cin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="CIN"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.9"/>

    <!-- Type de contrat -->
    <EditText
        android:id="@+id/contract_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Type de contrat"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.9"/>

    <!-- Numéro de contrat -->
    <EditText
        android:id="@+id/contract_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Entrez le numéro"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/contract_type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.9"/>

    <!-- Date début -->
    <TextView
        android:id="@+id/start_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date début:"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/contract_number"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="jj/mm/aaaa"
        app:layout_constraintTop_toTopOf="@id/start_date_label"
        app:layout_constraintLeft_toRightOf="@id/start_date_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.7"/>

    <!-- Valeur assurée -->

    <!-- Button to submit -->
    <EditText
        android:id="@+id/assured_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Valeur assurée"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_date"
        app:layout_constraintWidth_percent="0.9" />


    <Button
        android:id="@+id/submit_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ajouter"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.8"/>


    <Button
        android:id="@+id/button_go_to_main2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="136dp"
        android:text="Go to Main2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>





